<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ProjetJEE</display-name>
  <servlet>
    <servlet-name>Bidouille</servlet-name>
    <servlet-class>test.Bidouille</servlet-class>
    <init-param>
      <param-name>test</param-name>
      <param-value>myvalue</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Bidouille</servlet-name>
    <url-pattern>/Bidouille</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadServlet</servlet-name>
    <servlet-class>test.UploadServlet</servlet-class>
    <multipart-config/>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/single-upload</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthenticationCheck</filter-name>
    <filter-class>proj.filter.AuthenticationCheck</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationCheck</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>ERROR</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
</web-app>